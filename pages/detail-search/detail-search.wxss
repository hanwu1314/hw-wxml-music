/* pages/detail-search/detail-search.wxss */
page {
  /* --search-background-color: #fff; */
  /* --search-padding: 10px 0; */

  box-sizing: border-box;
  padding: 0 24rpx;
  background-color: #fafafa;
}

.red {
  color: red;
}

.content {
  padding: 10rpx 20rpx;
}

.item {
  width: 100%;
  padding: 20rpx 0;
}

.suggest {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.suggest .text {
  color: #fff;
  background-color: #aaa;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
  margin: 10rpx 15rpx;
}

.content .item .name {
  margin-left: 20rpx;
}