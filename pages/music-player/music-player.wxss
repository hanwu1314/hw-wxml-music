/* pages/music-player/music-player.wxss */
.bg-img,
.bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .4);
  backdrop-filter: blur(20px);
}

/* 导航栏的center */
.tabs {
  display: flex;
  font-size: 28rpx;
  color: #aaa;
}

.tabs .divider {
  margin: 0 8px;
}

.tabs .active {
  color: #fff;
}

/* 歌曲布局 */
.music {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  font-size: 28rpx;
  color: #fff;
}

.music .album {
  flex: 1;
}