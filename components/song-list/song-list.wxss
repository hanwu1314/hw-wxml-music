/* components/song-list/song-list.wxss */
.content {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
}

.content .shade {
  height: 500rpx;
  width: 100%;
  background-color: #777;
  opacity: 0.6;
}

.content .main {
  background-color: #fff;
  padding: 20rpx;
  height: 60%;
}

.content .main .noMore {
  margin-top: 40rpx;
  color: #aaa;
  font-size: 24rpx;
  text-align: center;
}